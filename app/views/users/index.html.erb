<div class="col-xs-3">
<%= render 'books/list', book:@book, user:@user %>
</div>

<div class="col-xs-9">
<h8>Users</h8>
<table>
	<tbody>
		<tr>
			<td>image</td>
			<td>name</td>
		</tr>
		<tr>
			<% @users.each do |user| %>
			<td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></td>
			<td><%= @user.name %></td>
			<td><%= link_to "Show", user_path(user.id) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
	
</div>