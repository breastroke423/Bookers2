<div class="col-xs-3">
<%= render 'books/list', book:@book %>
</div>

<div class="col-xs-9">
<h8>Book detail　『自分』</h8>
<table>
	<tbody>
		<tr>
			<td>title text</td>
			<td>opinion text</td>
		<% @books.each do |book| %>
			<td><%= @book.title %></td>
			<td><%= @book.body %></td>
			<td><%= link_to "Edit", edit_book_path(book.id) %></td>
			<td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
		</tr>
		<% end %>
	</tbody>
</table>
	
</div>
