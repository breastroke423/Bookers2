<div class="col-xs-3">
<%= render 'books/list', book:@book, user:@user %>
</div>

<h8>Books</h8>


<div class="col-xs-9">
<table>
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>

		</tr>
	</thead>
	<tbody>
		<tr>
			<% @books.each do |book| %>
				<td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></td>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
		</tr>
			<% end %>
	</tbody>
</table>

<footer>
	CopyRight Infratop.inc
</footer>
</div>
