<div class="col-xs-3">
<%= render 'books/list', book:@book %>
</div>
<h8>Book detail</h8>


<div class="col-xs-9">
<table>
	<tbody>
		<tr>
		<% if @book.user == current_user %>
			<% @books.each do |book| %>
				<td><%= link_to "#{book.title}", book_path(book.id) %></td>
				<td><%= book.body %></td>

				<td><%= link_to "Edit", edit_book_path(book.id) %></td>
				<td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
		</tr>
			<% end %>
		<% end %>
	</tbody>
</table>
</div>

