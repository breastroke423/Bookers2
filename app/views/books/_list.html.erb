<h7>User info</h7><br>

<% if user_signed_in? %>
<%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
<table>
	<thead>
		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>introduction</td>
			<td><%= user.introduction %></td>
		</tr>
	</tbody>
</table>

<% if user.id == current_user.id %>
	<p><%= link_to "設定", edit_user_path(user.id) %></p>
<% end %>

<h3>New Book</h3>
	<div class="sidebar">

			<% if book.errors.any? %>
			<div id="error_explanation">
				<h2><%= book.errors.count %> errors prohibited this obj from being saved></h2>
					<ul>
					<% book.errosfull_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
			</div>
			<% end %>
			<%= form_for(book) do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title %><br>

				<h4>Opinion</h4>
				<%= f.text_area :body %><br>
				<%= f.submit 'Create Book' %>
			<% end %>

	</div>
<% end %>